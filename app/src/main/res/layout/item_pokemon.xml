<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/item_pokemon_bg">

    <ImageView
        android:id="@+id/itemPokemonImg"
        android:layout_width="@dimen/pokemon_item_img_size"
        android:layout_height="@dimen/pokemon_item_img_size" />

    <TextView
        style="@style/pokemon_name"
        android:id="@+id/itemPokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="8dp"
        tools:text="Bulbasaur"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/itemPokemonId"
        style="@style/pokedex_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        tools:text="1" />

</LinearLayout>